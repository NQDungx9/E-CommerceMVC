@model LoginViewModel
@{
    ViewData["title"] = "Đăng Nhập";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

@* <partial name="Notification" /> *@
<section id="">
    <!--form-->
    <div class="container">
        <div class="row" style="display: flex; justify-content: space-between; align-items: center;">
            <!-- Social Login Section -->
           
            <!-- Login Form Section -->
            <div class="col-sm-6">
                <div class="login-form">
                    <!--login form-->
                    <h2>Login to your account</h2>
                    <form asp-action="Login" asp-controller="account">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label>UserName</label>
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger" />
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger" />
                        </div>
                        <div style="display:flex; justify-content:space-between">
                            <div style="display:grid;">
                                <span>
                                    <input type="checkbox" class="checkbox"> Keep me signed in
                                </span>
                                <span><a asp-action="forgetpass" asp-controller="account">Forgot your password ?</a></span>
                            </div>
                            <div>
                                <span>
                                    <a asp-action="create" asp-controller="account">Haven't have the account yet ?</a>
                                </span>
                            </div>
                        </div>
                        <button class="btn btn-default">Login</button>
                    </form>
                </div><!--/login form-->
            </div>

            <div class="col-sm-4">
                <div class="social-login">
                    <h2>Login with</h2>
                    <div style="display: flex; flex-direction: column; gap: 10px;">
                        <a asp-action="LoginGoogle" asp-controller="account" class="btn btn-primary" style="display: flex; align-items: center; gap: 10px;">
                            <i class="fa fa-google" style="font-size: 20px;"></i> Login with Google
                        </a>
                        <a href="#" class="btn btn-primary" style="display: flex; align-items: center; gap: 10px; background-color: #3b5998; border-color: #3b5998;">
                            <i class="fa fa-facebook" style="font-size: 20px;"></i> Login with Facebook
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section><!--/form-->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}