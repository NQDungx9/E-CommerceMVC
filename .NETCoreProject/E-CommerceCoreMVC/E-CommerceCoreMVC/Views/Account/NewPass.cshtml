@model AppUserModel
@{
    ViewData["title"] = "Đổi Mật Khẩu";
}
@* <partial name="Notification" /> *@
<section id="">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-sm-offset-1">
                <div class="login-form">
                    <!--Forgot form-->
                    <h2>Reset your password</h2>
                    <form asp-action="UpdateNewPassword" asp-controller="Account">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" name="Token" value="@ViewBag.Token"/>
                        <div class="form-group">
                            <label>Email</label>
                            <input value="@ViewBag.Email" readonly asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger" />
                        </div>

                        <div class="form-group">
                            <label>Password</label>
                            <input asp-for="PasswordHash" class="form-control" />
                            <span asp-validation-for="PasswordHash" class="text-danger" />
                        </div>
                        <button class="btn btn-default">Send</button>
                    </form>
                </div><!--/login form-->
            </div>
        </div>
    </div>
</section><!--/form-->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
