@model AppUserModel
@{
    ViewData["title"] = "Chỉnh sửa tài khoản";
}


<section>
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-sm-offset-1">
                <div class="signup-form">
                    <!--sign up form-->
                    <h2>Update Your Account</h2>
                    <form asp-action="UpdateInfoAccount" asp-controller="Account" autocomplete="off" method="post">
                        <input type="hidden" asp-for="Id"/>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label>UserName</label>
                            <input asp-for="UserName" readonly class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger" />
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input asp-for="Email" readonly class="form-control" />
                            <span asp-validation-for="Email" class="text-danger" />
                        </div>
                        <div class="form-group">
                            <label>PhoneNumber</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger" />
                        </div>
                        <div class="form-group">
                            <label>Old Password</label>
                            <input type="text" readonly value="@Model.PasswordHash" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>New Password</label>
                            <input type="text" name="PasswordHash" required class="form-control" />
                            <span asp-validation-for="PasswordHash" class="text-danger" />
                        </div>
                        <div style="display:flex; justify-content:space-between">
                            <div>
                                <button class="btn btn-default">Update</button>
                            </div>
                        </div>
                    </form>
                </div><!--/sign up form-->
            </div>
        </div>
    </div>
</section><!--/form-->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}