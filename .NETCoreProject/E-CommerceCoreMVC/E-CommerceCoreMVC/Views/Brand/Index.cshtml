<div class="col-sm-9 padding-right">
    <div class="features_items">
        <!--features_items-->
        <h2 class="title text-center">Features Items</h2>
        @foreach (var item in Model)
        {
            if (item == null) continue;

            var categoryName = item.Category?.Name ?? "No Category";
            var brandName = item.Brand?.Name ?? "No Brand";

            <div class="col-sm-4">
                <div class="product-image-wrapper">
                    <div class="single-products">
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id">
                            <div class="productinfo text-center">
                                <img src="~/media/products/@item.Image" alt="@item.Name" width="100%" />
                                <h2>@item.Price.ToString("#,##00 VND")e</h2>
                                <p>Tên Sản Phẩm: @item.Name</p>
                                <p>Tên Danh Mục: @categoryName</p>
                                <p>Tên Thương Hiệu: @brandName</p>
                                @if (item.Quantity > 0)
                                {
                                    <a class="btn btn-default add-to-cart" data-product-id="@item.Id"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                                }
                                else
                                {
                                    <a class="btn btn-default add-to-cart" style="color:red;"><i class="fa fa-shopping-cart"></i>Hết Hàng</a>
                                }
                            </div>
                        </a>
                    </div>
                </div>
                <div class="choose">
                    <ul class="nav nav-pills nav-justified">
                        <li><a href="#"><i class="fa fa-plus-square"></i>Add to wishlist</a></li>
                        <li><a href="#"><i class="fa fa-plus-square"></i>Add to compare</a></li>
                    </ul>
                </div>
            </div>
        }
    </div><!--features_items-->
