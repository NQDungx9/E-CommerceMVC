        <!--features_items-->
        <h2 class="title text-center">Features Items</h2>
        @foreach (var item in Model)
        {
            <div class="col-sm-4">
                <div class="product-image-wrapper" style="margin-bottom:auto;">
                    <div class="single-products">
                        <div class="productinfo text-center">
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id">
                                <img src="~/media/products/@item.Image" alt="@item.Name" width="100%" />
                                <h2>@item.Price.ToString("#,##00 VND")</h2>
                                <p>Tên Sản Phẩm: @item.Name</p>
                                <p>Tên Danh Mục: @item.Category.Name</p>
                                <p>Tên Thương Hiệu: @item.Brand.Name</p>
                                @if (item.Quantity > 0)
                                {
                                    <a class="btn btn-default add-to-cart"
                                       data-product-id="@item.Id"
                                       onclick="handleAddToCart(event, @User.Identity.IsAuthenticated)">
                                        <i class="fa fa-shopping-cart"></i> Add to cart
                                    </a>
                                }
                                else
                                {
                                    <a class="btn btn-default add-to-cart" style="color:red;"><i class="fa fa-shopping-cart"></i>Hết Hàng</a>
                                }
                            </a>
                        </div>
                        <div>
                            <ul class="nav nav-pills nav-justified">
                                <li><a><i class="btn btn-default add-btn-wishlist" data-product-id="@item.Id"></i></a>Yêu Thích</li>
                                <li><a><i class="btn btn-default add-btn-compare" data-product-id="@item.Id"></i></a>So Sánh</li>
                            </ul>
                        </div>
