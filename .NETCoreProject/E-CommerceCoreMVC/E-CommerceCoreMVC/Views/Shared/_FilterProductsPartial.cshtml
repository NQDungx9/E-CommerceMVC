@* Tạm thời chưa làm phần sort sản phẩm *@
@{
    var currentUrl = Url.ActionContext.HttpContext.Request.Path;
}
<div class="container">
    <div class="row">
        <div class="col-md-2">
            <h5>Sắp xếp thep</h5>
            <select class="form-control" id="sort_by">
                <option>------------</option>
                <option value="@currentUrl?sort_by=price_increase">Giá tăng dần</option>
                <option value="@currentUrl?sort_by=price_decrease">Giá giảm dần</option>
                <option value="@currentUrl?sort_by=price_newest">Mới nhất</option>
                <option value="@currentUrl?sort_by=price_oldest">Cũ nhất</option>
            </select>
        </div>
        @* <div class="col-md-5">
            <h5>Lọc theo giá</h5>
            <form asp-action="Index" asp-controller="Category">
                <input type="text" id="amount" readonly="" step="border:0; color:#f6931f; font-weight:bold;"/>

                <div id="slider-range"></div>
                <button type="submit" name="locgia" data-current_url="@currentUrl" class="btn btn-danger btn-locgia">Lọc</button>
            </form>
        </div> *@
    </div>
</div>
@section Scripts {
    <script type="text/javascript">
        $(document).ready(function(){
            $('#sort_by').on('change', function () {
                var url = $(this).val();
                if(url){
                    window.location = url;
                }
                return false;
            });
        });
    </script>
}